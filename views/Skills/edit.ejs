<%- include('../partials/header') %>

<% if (user) { %>

    <br><br>

    <h1><%= title %></h1>

    <form action="/skills/<%= skill._id %>?_method=PUT" method="POST">
        <label>
            Skill Name: <input type="text" name="skillName" value="<%= skill.skillName %>">
        </label><br>
        <label>
            Category: <input type="text" name="category" value="<%= skill.category %>">
        </label><br>
        <label>
            Description: <input type="text" name="description" value="<%= skill.description %>">
        </label><br>
        <label>
            Priority: 
            <select name="priority" value="<%= skill.priority %>">
                <option value="low">Low</option>
                <option value="medium">Medium</option>
                <option value="high">High</option>
            </select>
        </label><br>
        <label>
            <span>Status: </span>
            <select name="status" value="<%= skill.status %>">
                <option value="In Progress">In Progress</option>
                <option value="Completed">Completed</option>
            </select>
        </label>

        <br><br>

        <button type="submit">Edit Skill</button>
    </form>

    <br><br>

    <form action="/skills/<%= skill._id %>?_method=DELETE" method="POST">
        <button type="submit" onclick="return confirm('GOALS and DAILY TASKS associated with this skill will also be deleted.')">Delete Skill</button>
        
    </form>

<% } %>

<%- include('../partials/footer') %>