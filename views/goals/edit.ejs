<%- include('../partials/header') %>

<% if (user) { %>

    <br><br>

    <h1><%= title %></h1>

    <form action="/goals/<%= goal._id %>?_method=PUT" method="POST">
        <label>
            <span>Type: </span>
            <select name="type" value="<%= goal.type %>">
                <option value="longTermGoal">Long Term Goal</option>
                <option value="shortTermGoal">Short Term Goal</option>
            </select>
        </label><br>
        <label>
            <span>Skill: </span>
            <select name="skill" value="<%= goal.skill %>" required>
                <!-- <option value="" disabled selected>Select a skill</option> -->
                <% skills.forEach(function(skill) { %>
                    <option value="<%= skill._id %>"><%= skill.skillName %></option>
                <% }) %>
            </select>
        </label><br>
        <label>
            <span>Name: </span>
            <input type="text" name="name" value="<%= goal.name %>">
        </label><br>
        <label>
            <span>Description: </span>
            <input type="text" name="description" value="<%= goal.description %>">
        </label><br>
        <label>
            <span>Due Date: </span>
            <input type="datetime-local" name="dueDate" value="<%= formattedDueDate %>">
        </label><br>
        <label>
            <span>Priority: </span>
            <select name="priority" value="<%= goal.priority %>">
                <option value="low">Low</option>
                <option value="medium">Medium</option>
                <option value="high">High</option>
            </select>
        </label><br>
        <label>
            <span>Status: </span>
            <select name="status" value="<%= goal.status %>">
                <option value="In Progress">In Progress</option>
                <option value="Completed">Completed</option>
            </select>
        </label>
        
        <br><br>

        <button type="submit">Edit Goal</button>
    </form>

    <br><br>

    <form action="/goals/<%= goal._id %>?_method=DELETE" method="POST">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this GOAL?')">Delete Goal</button>
    </form>

<% } %>

<%- include('../partials/footer') %>